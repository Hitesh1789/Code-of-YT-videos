//Code in Java
public class bs {

    public static void main(String[] args) {
        int[] arr = {1,5,6,7,9,10,89,213,900};
        int n = arr.length;
        int target = 0;
        int lo = 0 ,hi =n-1 ,index=-1;
        boolean flag = false;

        while(lo<=hi){
            int mid = (lo+hi)/2;   
            if(arr[mid]==target){
                flag = true;
                index = mid;
                break;
            }
            else if(arr[mid]>target) hi=mid-1;
            else lo=mid+1;
        }

        if(flag == false) System.out.println("Not found");
        else System.out.println("Found at index "+ index);
    }
}

//Code in C++
#include <iostream>
using namespace std;

int main() {
    int arr[] = {1,5,6,7,9,10,89,213,900};
    int n = sizeof(arr)/sizeof(int);
    int target = 0;
    int lo = 0 ,hi =n-1 ,index=-1;
    bool flag = false;

    while(lo<=hi){
        int mid = (lo+hi)/2;   
        if(arr[mid]==target){
            flag = true;
            index = mid;
            break;
        }
        else if(arr[mid]>target) hi=mid-1;
        else lo=mid+1;
    }

    if(flag == false) cout<<"Not found";
    else cout<<"Found at index "<<index;
    return 0;
}
